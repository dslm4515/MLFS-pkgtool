#! /bin/bash
# Setup environmental variables for pkg-building system
# Build scripts expect this script to be in /tools/etc

# Change the following if desired.
export SRCDIR=/sources
export BSTAGE=${SRCDIR}/BUILD
export PSTAGE=${SRCDIR}/PKGS
export HSTTRPL="x86_64-linux-musl"
#export ARCH=$(uname -m)
#export MLFS_V="5.00"
#export PKG_SUFFIX="${ARCH}-musl-$MLFS_V-.txz"

if [ "$2" != "" ]; then
        export MJ="-j$2"
else
        export MJ=""
fi

echo "Unpacking $1 ..." &&
tar xvf $1 
