# Stage1: pcre2
# Build and install under chroot
#
# Required by glib

# Configure
CC=clang    CXX=clang++ \
AR=llvm-ar  AS=llvm-as  \
RANLIB=llvm-ranlib      \
LD=ld.lld   STRIP=llvm-strip \
./configure --build=${TUPLE} \
            --host=${TUPLE}  \
            --prefix=/llvmtools \
            --enable-jit \
            --disable-static 

# Compile
make

# Install to llvmtools
make install
