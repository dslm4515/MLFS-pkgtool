# Final System: Zstd
# This section is done in Chroot environment

export PNAME="zstd" &&
export   VER="1.5.5"      &&
export  MJOB="-j2"       &&

# Source is hard coded for ar. Create a link
ln -sv llvm-ar /llvmtools/bin/ar

CC=$CC CXX=$CXX make 
CC=$CC CXX=$CXX make -C contrib/pzstd

make DESTDIR=$BUILD prefix=/usr install
make DESTDIR=$BUILD PREFIX=/usr -C contrib/pzstd install

# Set the dynamic loader for each executable
for b in pzstd zstd
do
  setDL $BUILD/usr/bin/$b
done

# Remove temporary link
rm -v /llvmtools/bin/ar

# Build package
cd ${BUILD} && mkdir -v ${BUILD}/install          &&
cp -v $DESCS/${PNAME} ${BUILD}/install/slack-desc &&
makepkg -l y -c n $PKGS/${PNAME}-${VER}-$PSUFFIX  &&

# Clean stage area
rm -rf ${BUILD}/* &&

# Install
spkg $PKGS/${PNAME}-${VER}-$PSUFFIX
