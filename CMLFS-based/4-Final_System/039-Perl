# Final System: Perl 
# This section is done in Chroot environment

export PNAME="perl"  &&
export   VER="5.36.1" &&
export  PVER="5.26" &&
export  MJOB="-j2"   &&

# Use the bundled zlib source to build Compress:RAW:Zlib module. 
# zlib-ng appears to be incompatible (header definition). This 
# has been investigated by perl developers and claim zlib-ng 
# is supported.
export BUILD_ZLIB=True

# Dont use the bundled bzip2
export BUILD_BZIP2=0

# Per Chimera Linux & Alpine Linux, set these CFLAGS:
export  CFLAGS=" -Wno-compound-token-split-by-macro"
export CFLAGS+=" -DNO_POSIX_2008_LOCALE"
export CFLAGS+=" -D_GNU_SOURCE"

# Ensure that we never accidentally bundle bzip2
rm -rf cpan/Compress-Raw-Bzip2/bzip2-src
sed -i '/\(bzip2\)-src/d' MANIFEST

# Apply patches from Chimera Linux
patch -Np1 -i ../patches/perl-chimera/D-SHA-CFLAGS.diff
patch -Np1 -i ../patches/perl-chimera/cpan_definstalldirs.diff
patch -Np1 -i ../patches/perl-chimera/cross-Makefile.SH.patch
patch -Np1 -i ../patches/perl-chimera/drop_fstack_protector.diff
patch -Np1 -i ../patches/perl-chimera/usr_local.diff

# Configure source with clang
CC=clang CXX=clang++ \
sh Configure -des -Dprefix=/usr                                \
                  -Dvendorprefix=/usr                          \
                  -Dprivlib=/usr/lib/perl5/${PVER}/core_perl      \
                  -Darchlib=/usr/lib/perl5/${PVER}/core_perl      \
                  -Dsitelib=/usr/lib/perl5/${PVER}/site_perl      \
                  -Dsitearch=/usr/lib/perl5/${PVER}/site_perl     \
                  -Dvendorlib=/usr/lib/perl5/${PVER}/vendor_perl  \
                  -Dvendorarch=/usr/lib/perl5/${PVER}/vendor_perl \
                  -Dman1dir=/usr/share/man/man1                \
                  -Dman3dir=/usr/share/man/man3                \
                  -Dpager="/usr/bin/less -isR"                 \
                  -Duseshrplib                                 \
                  -Dusethreads                                 \
                  -Dcccdlflags='-fPIC' -Dccdlflags='-rdynamic'

# Compile & install
make $MJOB && make DESTDIR=$BUILD install

# Clear variables used in this build
unset BUILD_ZLIB BUILD_BZIP2 CFLAGS PVER

# Build package
cd ${BUILD} && mkdir -v ${BUILD}/install          &&
cp -v $DESCS/${PNAME} ${BUILD}/install/slack-desc &&
makepkg -l y -c n $PKGS/${PNAME}-${VER}-$PSUFFIX  &&

# Clean stage area
rm -rf ${BUILD}/* &&

# Install
spkg $PKGS/${PNAME}-${VER}-$PSUFFIX
