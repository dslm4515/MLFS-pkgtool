# Final System: glib
# Required for spkg

export PNAME="glib"  &&
export   VER="2.78.3" &&
export  MJOB="-j2"   &&

# Configure with meson
meson setup --prefix=/usr \
            -Dman=false \
            -Dselinux=disabled \
            -Dwrap_mode=nodownload BUILD

# Build and install to stage area
ninja -C BUILD $MJOB && DESTDIR=$BUILD ninja -C BUILD install

# Build package
cd ${BUILD} && mkdir -v ${BUILD}/install          &&
cp -v $DESCS/${PNAME} ${BUILD}/install/slack-desc &&
makepkg -l y -c n $PKGS/${PNAME}-${VER}-$PSUFFIX  &&

# Clean stage area
rm -rf ${BUILD}/* &&

# Install
spkg $PKGS/${PNAME}-${VER}-$PSUFFIX
