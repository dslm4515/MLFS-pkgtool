# Final System: Gettext-Tiny
# This section is done in Chroot environment

export PNAME="gettext-tiny"  &&
export   VER="0.3.2" &&
export  MJOB="-j2"   &&

# Apply patch from Chimera Linux
patch -Np1 -i ../patches/gettext-tiny-chimera/portable-autopoint.patch

# Compile with clang
CC=clang CXX=clang++ \
make LIBINTL=MUSL prefix=/usr

# Install
make LIBINTL=MUSL DESTDIR=/ prefix=/usr install

# Create a shared library
clang -O0 -fPIC -c -o libintl-musl.o libintl/libintl-musl.c
clang -shared -o libintl.so libintl-musl.o
cp -v libintl.so $BUILD/usr/lib/

# Build package
cd ${BUILD} && mkdir -v ${BUILD}/install          &&
cp -v $DESCS/${PNAME} ${BUILD}/install/slack-desc &&
makepkg -l y -c n $PKGS/${PNAME}-${VER}-$PSUFFIX  &&

# Clean stage area
rm -rf ${BUILD}/* &&

# Install
spkg $PKGS/${PNAME}-${VER}-$PSUFFIX
