# Final System: Bzip2
# This section is done in Chroot environment

export PNAME="bzip2"  &&
export   VER="1.0.8" &&
export  MJOB="-j2"   &&

# Apply patches form Alpine Linux
patch -Np1 -i ../patches/bzip2-alpine/bzip2-1.0.2-progress.patch
patch -Np1 -i ../patches/bzip2-alpine/bzip2-1.0.3-no-test.patch
patch -Np1 -i ../patches/bzip2-alpine/bzip2-1.0.4-makefile-CFLAGS.patch
patch -Np1 -i ../patches/bzip2-alpine/bzip2-1.0.4-man-links.patch
patch -Np1 -i ../patches/bzip2-alpine/saneso.patch

# Fix man path
# Generate relative symlinks
sed -i -e 's:\$(PREFIX)/man:\$(PREFIX)/share/man:g' \
       -e 's:ln -s -f $(PREFIX)/bin/:ln -s :' Makefile

# Fixup broken version stuff
sed -i -e "s:1\.0\.4:1.0.8:" \
       bzip2.1 bzip2.txt Makefile-libbz2_so manual.*

# Some packages will require bzip2 compiled with -fPIC
export CFLAGS="-fPIC"

# Makefile hardcoded for gcc. Force it to use stage1 clang via $CC
sed -i '18d' Makefile
sed -i '25d' Makefile-libbz2_so

# Prepare the source
make -f Makefile-libbz2_so
make clean

# Source is hard-coded for ar instead of llvm-ar
ln -sv llvm-ar /llvmtools/bin/ar

# Build & Install
make -f Makefile-libbz2_so all
make all
make PREFIX=$BUILD/usr install
install -v libbz2.so.1.0.8  $BUILD/usr/lib/libbz2.so.1.0.8
ln -sv libbz2.so.1.0.8      $BUILD/usr/lib/libbz2.so
ln -sv libbz2.so.1.0.8      $BUILD/usr/lib/libbz2.so.1

mkdir -pv $BUILD/usr/lib/pkgconfig

sed "s|@VERSION@|1.0.8|" ../files/bzip2-alpine/bzip2.pc.in \
    > $BUILD/usr/lib/pkgconfig/bzip2.pc

unset CFLAGS

# Set the dynamic loader for each executable
for b in bzip2 bzip2recover bzcat bunzip2
do
  setDL $BUILD/usr/bin/$b
done

# Remove temporary link
rm -v /llvmtools/bin/ar

# Build package
cd ${BUILD} && mkdir -v ${BUILD}/install          &&
cp -v $DESCS/${PNAME} ${BUILD}/install/slack-desc &&
makepkg -l y -c n $PKGS/${PNAME}-${VER}-$PSUFFIX  &&

# Clean stage area
rm -rf ${BUILD}/* &&

# Install
spkg $PKGS/${PNAME}-${VER}-$PSUFFIX
