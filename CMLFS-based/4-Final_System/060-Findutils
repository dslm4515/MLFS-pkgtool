# Final System: Findutils
# This section is done in Chroot environment

export PNAME="findutils"  &&
export   VER="4.9.0" &&
export  MJOB="-j2"   &&

# Configure source with out using BSD headers
CC=clang CXX=clang++ \
ac_cv_header_sys_cdefs_h=no \
./configure --prefix=/usr --localstatedir=/var/lib/locate

# Compile
make $MJOB && \

# Install
make DESTDIR=$BUILD install

# The updatedb script also needs to be modified to 
# correct an explicit path
sed -i 's|find:=${BINDIR}|find:=/bin|' $BUILD/usr/bin/updatedb

# Build package
cd ${BUILD} && mkdir -v ${BUILD}/install          &&
cp -v $DESCS/${PNAME} ${BUILD}/install/slack-desc &&
makepkg -l y -c n $PKGS/${PNAME}-${VER}-$PSUFFIX  &&

# Clean stage area
rm -rf ${BUILD}/* &&

# Install
spkg $PKGS/${PNAME}-${VER}-$PSUFFIX
