# Final System: Xz-utils
# This section is done in Chroot environment

export PNAME="xz"  &&
export   VER="5.4.5" &&
export  MJOB="-j2"   

CC=$CC CXX=$CXX \
./configure --prefix=/usr    \
            --disable-static \
            --docdir=/usr/share/doc/xz-5.4.5

make && make DESTDIR=$BUILD install

# Set the dynamic loader for each executable
for b in lzcat lzmadec lzmainfo xz xzdec
do
   setDL $BUILD/usr/bin/$b
done

# Build package
cd ${BUILD} && mkdir -v ${BUILD}/install          &&
cp -v $DESCS/${PNAME} ${BUILD}/install/slack-desc &&
makepkg -l y -c n $PKGS/${PNAME}-${VER}-$PSUFFIX  &&

# Clean stage area
rm -rf ${BUILD}/* &&

# Install
spkg $PKGS/${PNAME}-${VER}-$PSUFFIX
