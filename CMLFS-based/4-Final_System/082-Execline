# Final System: Execline 
# This section is done in Chroot environment

export PNAME="execline"  &&
export   VER="2.9.4.0" &&
export  MJOB="-j2"   &&

# Configure with clang and 
CC=clang CXX=clang++ \
./configure --enable-shared         \
            --enable-static         \
            --enable-allstatic      \
            --enable-static-libc    \
            --libdir=/usr/lib       \
            --with-dynlib=/usr/lib  \
            --prefix=/usr           \
            --exec-prefix=/usr      \
            --enable-pedantic-posix \
            --enable-nsss

# Compile & install
make $MJOB && make DESTDIR=$BUILD install

# Build package
cd ${BUILD} && mkdir -v ${BUILD}/install          &&
cp -v $DESCS/${PNAME} ${BUILD}/install/slack-desc &&
makepkg -l y -c n $PKGS/${PNAME}-${VER}-$PSUFFIX  &&

# Clean stage area
rm -rf ${BUILD}/* &&

# Install
spkg $PKGS/${PNAME}-${VER}-$PSUFFIX
