# Final System: Procps-ng 
# This section is done in Chroot environment

export PNAME="procps-ng"  &&
export   VER="4.0.3" &&
export  MJOB="-j2"   &&

# Apply patch for utmpx support
patch -Np1 -i ../patches/procps-mlfs/use_utmpx.patch

# Apply patch for netbsd-curses compatibility:
patch -Np1 -i ../patches/procps-mlfs/netbsd-curses-compat.patch

# Update configure script
autoreconf -fiv

# Configure with clang, utmps and skalibs
LIBS="$LIBS -lutmps -lskarnet"   \
ac_cv_func_malloc_0_nonnull=yes  \
ac_cv_func_realloc_0_nonnull=yes \
./configure --prefix=/usr                            \
            --bindir=/usr/bin                        \
            --sbindir=/usr/sbin                      \
            --exec-prefix=                           \
            --libdir=/usr/lib                        \
            --docdir=/usr/share/doc/procps-ng-4.0.3  \
            --disable-static                         \
            --disable-kill                           \
            --enable-watch8bit                       \
            --without-systemd --disable-modern-top

# Compile & install
make i$MJOB && make DESTDIR=$BUILD install

# Build package
cd ${BUILD} && mkdir -v ${BUILD}/install          &&
cp -v $DESCS/${PNAME} ${BUILD}/install/slack-desc &&
makepkg -l y -c n $PKGS/${PNAME}-${VER}-$PSUFFIX  &&

# Clean stage area
rm -rf ${BUILD}/* &&

# Install
spkg $PKGS/${PNAME}-${VER}-$PSUFFIX
