# Final System: Coreutils
# This section is done in Chroot environment

export PNAME="coreutils"  &&
export   VER="9.4" &&
export  MJOB="-j2"   &&

# Suppress a test which on some machines can loop forever
sed -i '/test.lock/s/^/#/' gnulib-tests/gnulib.mk

# Configure
CC=clang CXX=clang++     \
ac_cv_func_syncfs=no     \
FORCE_UNSAFE_CONFIGURE=1 \
LIBS="-lutmps -lskarnet" \
ac_cv_header_sys_cdefs_h=no \
./configure --prefix=/usr                           \
            --enable-no-install-program=kill,uptime \
            --disable-rpath                         \
            --enable-install-program=arch,hostname

# Build and install
FORCE_UNSAFE_CONFIGURE=1 make $MJOB && make DESTDIR=$BUILD install

# Move programs to the locations specified by the FHS:
mkdir -pv $BUILD/usr/sbin
mv -v $BUILD/usr/bin/chroot $BUILD/usr/sbin
mv -v /usr/share/man/man1/chroot.1 $BUILD/usr/share/man/man8/chroot.8
sed -i 's/"1"/"8"/' $BUILD/usr/share/man/man8/chroot.8
# Build package
cd ${BUILD} && mkdir -v ${BUILD}/install          &&
cp -v $DESCS/${PNAME} ${BUILD}/install/slack-desc &&
makepkg -l y -c n $PKGS/${PNAME}-${VER}-$PSUFFIX  &&

# Clean stage area
rm -rf ${BUILD}/* &&

# Install
spkg $PKGS/${PNAME}-${VER}-$PSUFFIX
