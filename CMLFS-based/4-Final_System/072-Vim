# Final System: Vim
# This section is done in Chroot environment

export PNAME="vim"  &&
export   VER="9.0.1503" &&
export  MJOB="-j2"   &&

# Change the default location of the vimrc 
# configuration file to /etc
echo '#define SYS_VIMRC_FILE "/etc/vimrc"' >> src/feature.h

# Configure with clang
CC=clang CXX=clang++ \
./configure --prefix=/usr

# Compile & install
make $MJOB  && make DESTDIR=$BUILD install

# Many users reflexively type vi instead of vim. To allow
# execution of vim when users habitually enter vi, create a
# symlink for both the binary and the man page in the
# provided languages:
ln -sv vim $BUILD/usr/bin/vi
for L in  $BUILD/usr/share/man/{,*/}man1/vim.1; do
    ln -sv vim.1 $(dirname $L)/vi.1
done
ln -sv ../vim/vim82/doc $BUILD/usr/share/doc/vim-9.0.1503

# Per LFS... By default, vim runs in vi-incompatible mode.
# Create a default vim configuration file by running the following:
mkdir -pv $BUILD/etc
cat > $BUILD/etc/vimrc << "EOF"
" Begin /etc/vimrc

" Ensure defaults are set before customizing settings, not after
source $VIMRUNTIME/defaults.vim
let skip_defaults_vim=1

set nocompatible
set backspace=2
set mouse=
syntax on
if (&term == "xterm") || (&term == "putty")
  set background=dark
endif

" End /etc/vimrc
EOF

# Gvim was not compiled. Remove desktop & icon files for it:
rm -v   $BUILD/usr/share/applications/gvim.desktop
for s in 16x16 32x32
do
 rm -v  $BUILD/usr/share/icons/locolor/$s/apps/gvim.png
done
rm -v  $BUILD/usr/share/icons/hicolor/48x48/apps/gvim.png

# Build package
cd ${BUILD} && mkdir -v ${BUILD}/install          &&
cp -v $DESCS/${PNAME} ${BUILD}/install/slack-desc &&
makepkg -l y -c n $PKGS/${PNAME}-${VER}-$PSUFFIX  &&

# Clean stage area
rm -rf ${BUILD}/* &&

# Install
spkg $PKGS/${PNAME}-${VER}-$PSUFFIX
